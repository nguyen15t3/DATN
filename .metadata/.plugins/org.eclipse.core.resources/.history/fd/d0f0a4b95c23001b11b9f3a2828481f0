	public static void parseEmployeeObject(JsonElement arrayElement) {
		//DiemChuan[] diemchuan_datas = (DiemChuan[]) employee.get("diemchuan_datas");
		
		
        JsonObject obj = arrayElement.getAsJsonObject();
		// Get employee object within list
		University_meta univer = new University_meta();
		// Get employee first name
		
		String url =  obj.get("url").getAsString();// (String) employeeObject.get("url");
		System.out.println(url);

		// Get employee last name
		String university_code = obj.get("university_code").getAsString();
		System.out.println(university_code);

		// Get employee website name
		String university_name = obj.get("university_name").getAsString();	
		System.out.println(university_name);
		
		
		
